<% include partials/header %>

<div class="container">

<h1>Edit Room</h1>
<form action="/rooms/<%= room._id %>?_method=PUT" method="POST">
	<div class="form-group">
		<input type="text" id="name" name="name" class="form-control" value="<%= room.name %>" autofocus="autofocus">
		<div id='nameError' class="invalid-feedback"></div>
	</div>

	<div class="form-group">
	  	<% var sizes = ["Extra-Small", "Small", "Medium", "Large", "Extra-Large"]; %>

		<select name="size" id="size" class="form-control">
		  <%sizes.forEach(function(size){ %>
		  	<%if(size == room.size){%>
		  		<option selected value="<%=size%>"><%=size%></option>
		  	<%} else {%>
		  		<option value="<%=size%>"><%=size%></option>
		  	<%}%>
		  <% }); %>
		</select>
	  </div>

	<div class="form-group">
		<input type="text" id="image" name="image" class="form-control" value="<%= room.image %>">
		<div id='imageError' class="invalid-feedback"></div>
	</div>

	<div class="form-group">
		<button type="submit" id="submit" class="btn btn-primary">Submit</button>
	</div>
</form>

</div>

<script src="/javascripts/room-form-validate.js"></script>

<% include partials/footer %>