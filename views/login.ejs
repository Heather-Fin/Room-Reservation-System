<% include partials/header %>

<div class="container-fluid h-100 bg-light text-dark pt-5 pb-5">

	<div class="row justify-content-center align-items-center">
		<h1>User Login</h1>
	</div>
	<hr/>

	<div class="row justify-content-center align-items-center h-100">
      <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-3">

		<form action="/login" method="POST">
		  <div class="form-group">
		    <input id="username" type="text" name="username" class="form-control" placeholder="Username" maxlength="12" autofocus="autofocus">
		    <div id='usernameError' class="invalid-feedback"></div>
		  </div>

		  <div class="form-group">
		    <input id="password" type="password" name="password" class="form-control" placeholder="Password" maxlength="16">
		    <div id='passwordError' class="invalid-feedback"></div>
		  </div>
		  <div class="row justify-content-center">
		  	<button type="submit" id="submit" class="btn btn-primary">Submit</button>
		  </div>
		</form>
	  </div>
	</div>
</div>

<script src="/javascripts/login-form-validation.js"></script>

<% include partials/footer %>