<% include partials/header %>

<div class="container">

<h1 id="create-room-page">Create a new room</h1>
<form action="/rooms" method="POST" enctype="multipart/form-data">
	<div class="form-group">
		<input type="text" id="name" name="name" class="form-control" placeholder="Name" autofocus="autofocus">
		<div id='nameError' class="invalid-feedback"></div>
	</div>

	<div class="form-group">
	  	<% var sizes = ["Extra-Small", "Small", "Medium", "Large", "Extra-Large"]; %>

		<select name="size" id="size" class="form-control">
		  <%sizes.forEach(function(size){ %>
		  	<option value="<%=size%>"><%=size%></option>
		  <% }); %>
		</select>
	  </div>


	<div class="form-group">
		<input type='file' accept="image/*" name="image" class="form-control" id="image" placeholder="Image file"/>
<!-- 		<input type="text" name="image" class="form-control" id="image" placeholder="Image"> -->
		<div id='imageError' class="invalid-feedback"></div>
	</div>

	<div class="form-group">
		<textarea name="description" class="form-control" id="description" placeholder="Description"></textarea>
		<div id='descriptionError' class="invalid-feedback"></div>
	</div>

	<div class="form-group">
		<button type="submit" id="submit" class="btn btn-primary">Submit</button>
	</div>
</form>

</div>

<script src="/javascripts/room-form-validate.js"></script>

<% include partials/footer %>